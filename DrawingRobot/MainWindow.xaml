<Window x:Name="mainWindow" x:Class="DrawingRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingRobot"
        mc:Ignorable="d"
        Title="MainWindow" Height="740" Width="1280" ResizeMode="NoResize">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="560"/>
            <ColumnDefinition Width="834.667"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="grid2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="200*" />
                <ColumnDefinition Width="267*" />
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="variableNames" Grid.Column="1" />
            <StackPanel x:Name="variableValues" Grid.Column="2" />
        </Grid>

        <Canvas x:Name="canvas" Grid.Column="1"/>
    </Grid>
</Window>
